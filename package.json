{
  "name": "rivet-core",
  "description": "Indiana University design system",
  "homepage": "https://rivet.iu.edu",
  "version": "2.0.0-alpha.8",
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/indiana-university/rivet-source"
  },
  "bugs": {
    "url": "https://github.com/indiana-university/rivet-source/issues",
    "email": "rivet@iu.edu"
  },
  "main": "js/rivet-esm.js",
  "module": "js/rivet-esm.js",
  "scripts": {
    "start": "gulp",
    "build": "npm run clean && gulp release",
    "asset:upload": "npm run clean && gulp release && zip -r rivet-gh-release.zip css js sass tokens index.html",
    "changelog": "node ./scripts/changelog.js",
    "fix:css": "stylelint 'src/sass/**/*.scss' --fix",
    "fix:js": "standard 'src/js' --fix",
    "test": "start-server-and-test cypress:serve http://localhost:3000 cypress:test",
    "cypress:browser": "cypress open",
    "cypress:serve": "gulp headless",
    "cypress:test": "cypress run",
    "clean": "rm -rf ./css ./js ./sass ./tokens ./rivet.zip ./index.html",
    "prepublishOnly": "npm run build",
    "lint": "standard 'src/js'"
  },
  "files": [
    "css/**/*",
    "sass/**/*",
    "js/**/*",
    "tokens/**/*",
    "index.html"
  ],
  "devDependencies": {
    "@actions/core": "^1.2.2",
    "@actions/github": "^2.1.1",
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@frctl/fractal": "^1.5.8",
    "@frctl/mandelbrot": "^1.9.2",
    "@frctl/nunjucks": "^2.0.1",
    "@octokit/rest": "^17.1.3",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "autoprefixer": "^7.1.2",
    "axios": "^0.21.2",
    "browser-sync": "^2.26.13",
    "cypress": "^5.5.0",
    "faker": "^5.5.3",
    "gulp": "^4.0.0",
    "gulp-babel": "^8.0.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-header": "^1.8.9",
    "gulp-postcss": "^7.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^4.0.2",
    "gulp-strip-comments": "^2.5.2",
    "gulp-stylelint": "^13.0.0",
    "gulp-terser": "^1.2.0",
    "node-sass": "^5.0.0",
    "postcss": "^7.0.21",
    "postcss-scss": "^2.0.0",
    "rollup": "^1.26.5",
    "sass": "^1.25.0",
    "standard": "^16.0.3",
    "start-server-and-test": "^1.10.6",
    "style-dictionary": "^2.8.3",
    "stylelint": "^13.2.1",
    "stylelint-config-rivet": "^1.0.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.14.2"
  },
  "dependencies": {
    "wicked-elements": "^3.1.1"
  }
}
